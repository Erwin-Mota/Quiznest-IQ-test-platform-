# =====================================================
# IQ Test Platform - JavaScript Native Backend
# =====================================================

# Server Configuration
NODE_ENV=development
PORT=5000
HOST=0.0.0.0
HTTPS=false
TRUST_PROXY=false

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# JWT Configuration (REQUIRED - Generate secure secrets)
JWT_SECRET=your-super-secure-jwt-secret-min-32-chars
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-min-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration (REQUIRED)
SESSION_SECRET=your-super-secure-session-secret-min-32-chars

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=iq_test_platform
DB_USER=postgres
DB_PASSWORD=your_secure_database_password
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_ACQUIRE_TIMEOUT=30000
DB_CREATE_TIMEOUT=30000
DB_DESTROY_TIMEOUT=5000
DB_IDLE_TIMEOUT=30000
DB_REAP_INTERVAL=1000
DB_CREATE_RETRY_INTERVAL=200

# Database SSL (for production)
DB_SSL_CA=
DB_SSL_KEY=
DB_SSL_CERT=

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password
REDIS_DB=0
REDIS_RETRY_DELAY=100
REDIS_MAX_RETRIES=3
REDIS_CONNECT_TIMEOUT=10000
REDIS_COMMAND_TIMEOUT=5000

# Redis SSL (for production)
REDIS_SSL_CA=
REDIS_SSL_KEY=
REDIS_SSL_CERT=

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@iqtest.com

# Storage Configuration
STORAGE_PROVIDER=local
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/gif,application/pdf

# AWS S3 Configuration (if using S3)
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Monitoring Configuration
SENTRY_DSN=your-sentry-dsn
SENTRY_TRACES_SAMPLE_RATE=0.1
OTEL_ENABLED=false
OTEL_SERVICE_NAME=iq-test-backend
OTEL_SERVICE_VERSION=1.0.0

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_2FA=false
ENABLE_SOCIAL_LOGIN=false
ENABLE_AUDIT_LOGGING=true
ENABLE_RATE_LIMITING=true

# OAuth Configuration (if using social login)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
