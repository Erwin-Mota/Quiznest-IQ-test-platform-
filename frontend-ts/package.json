{
  "name": "iq-test-frontend-ts",
  "version": "1.0.0",
  "description": "TypeScript frontend for IQ Test Platform",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "tsc --watch & live-server --port=3000 --open=/index.html",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "serve": "live-server --port=3000 --open=/index.html",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "keywords": [
    "iq-test",
    "typescript",
    "frontend",
    "cognitive-assessment"
  ],
  "author": "IQ Test Platform Team",
  "license": "MIT",
  "devDependencies": {
    "typescript": "^5.3.0",
    "live-server": "^1.2.2",
    "eslint": "^8.54.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
